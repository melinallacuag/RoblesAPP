<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PuntosFacturaFragment">

    <LinearLayout
        android:layout_width="380sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:paddingEnd="30dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="FACTURACIÓN"
                android:textColor="#071C65"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btncerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_cerrarx" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="N° Placa:"
            android:textColor="#071C65"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputnplaca"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/input_border"
            android:drawablePadding="12sp"
            android:hint="Ingresar N° Placa"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColor="#123456"
            android:textColorHint="#404143"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="RUC:"
            android:textColor="#071C65"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputruc"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@drawable/input_border"
                android:hint="Ingresar RUC"
                android:maxLength="11"
                android:inputType="number"
                android:paddingLeft="20sp"
                android:textColor="#123456"
                android:textColorHint="#404143"
                android:textSize="14sp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Razon Social"
            android:textColor="#071C65"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputrazonsocial"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/input_border"
            android:drawablePadding="12sp"
            android:hint="Ingresar Razon Social"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColor="#123456"
            android:textColorHint="#404143"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Dirección"
            android:textColor="#071C65"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputdireccion"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/input_border"
            android:drawablePadding="12sp"
            android:hint="Ingresar Dirección"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColor="#123456"
            android:textColorHint="#404143"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btntipopago"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="10sp"
            android:backgroundTint="#0FA10A"
            android:gravity="center"
            android:text="Tipo de pago"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncancelarpuntosfacturacion"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:layout_weight="1"
                android:backgroundTint="#D51A30"
                android:text="Cancelar"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="15sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnagregarpuntosfacturacion"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:text="Agregar"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="15sp"
                app:cornerRadius="10sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>